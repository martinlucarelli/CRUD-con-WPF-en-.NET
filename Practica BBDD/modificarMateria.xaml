<Window x:Class="Practica_BBDD.modificarMateria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica_BBDD"
        mc:Ignorable="d"
        Title="modificarMateria" Height="250" Width="400">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="¿Que desea modificar?" FontSize="15" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,24,0,0"/>
        <ComboBox Name="ComboBoxOpciones" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" Width="120">

            <ComboBoxItem>Profesor a cargo</ComboBoxItem>
            <ComboBoxItem>Carga horaria semanal</ComboBoxItem>


        </ComboBox>
        <Button Name="aceptar" Content="Aceptar" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="82" Margin="63,0,0,0" Click="aceptar_Click" />
        <Button Content="Cancelar" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="82" Margin="240,0,0,0" Click="Button_Click"/>



    </Grid>
</Window>
